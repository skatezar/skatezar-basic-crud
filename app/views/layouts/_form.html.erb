<div class="container">
  <div class="card">
  <%= form_for(@item) do |f| %>

    <div>
     <%= f.text_field :condition %>
    <%= f.label :condition %>
    </div>
    <div>
       <%= f.text_field :brand %>
      <%= f.label :brand %>
    </div>
   <div>
    <%= f.text_field :size %>
    <%= f.label :size %>
   </div>
   <div>
      <%= f.number_field :price %>
      <%= f.label :price %>
   </div>
    <div>
      <%= f.text_field :category %>
      <%= f.label :category %>
    </div>


    <div class="d-flex justify-content-center">
      <button class="btn btn-info">
        <%= f.submit %>
      </button>
    </div>
  <% end %>
  </div>
</div>

